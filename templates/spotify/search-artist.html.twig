{% extends 'base.html.twig' %}

{% block title %}Recherche d'artiste Spotify{% endblock %}

{% block stylesheets %}
    <style>
        .search-container {
            margin-top: 50px;
            text-align: center;
        }
        .search-container form {
            display: inline-block;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .search-container input[type="search"] {
            padding: 10px;
            font-size: 16px;
            width: 300px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-right: 10px;
        }
        .search-container button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: #1db954;
            color: #fff;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .search-container button:hover {
            background-color: #1aa34a;
        }
        .results {
            display: flex;
            justify-content: space-evenly;
            flex-wrap: wrap;
            margin-top: 40px;
            text-align: center;
        }
        .artist {
            margin-bottom: 20px;
            width: 300px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: inline-block;
            text-align: center;
            text-decoration: none;
            color: #fff;
            position: relative;
            transition: transform 0.3s;
        }
        .artist:hover {
            transform: scale(1.05);
            background: #333232;
        }

        .artist:hover .play-button {
            display: flex;
        }

        .artist img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="search-container">
        <h1>Rechercher un artiste</h1>
        {{ form_start(form) }}
            {{ form_widget(form.searchValue) }}
            {{ form_widget(form.search) }}
        {{ form_end(form) }}
    </div>
    <div class="results">
        {% if artists is defined %}
            {% if artists|length > 0 %}
                {% for artist in artists %}
                    <a href="artist/{{ artist.id }}" class="artist">
                        <h2>{{ artist.name }}</h2>
                        <p>Abonnés : {{ artist.followers }}</p>
                        <p>Genres : {{ artist.genres|join(', ') }}</p>
                        {% if artist.images|length > 0 %}
                            <img src="{{ artist.images }}" alt="{{ artist.name }}">
                        {% endif %}
                    </a>
                {% endfor %}
            {% else %}
                <p>Aucun artiste trouvé.</p>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}