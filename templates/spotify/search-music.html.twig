{% extends 'base.html.twig' %}

{% block title %}Spotify Search Music{% endblock %}

{% block stylesheets %}
    <style>
        .search-container {
            margin-top: 50px;
            text-align: center;
        }
        .search-container form {
            display: inline-block;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .search-container input[type="search"] {
            padding: 10px;
            font-size: 16px;
            width: 300px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-right: 10px;
        }
        .search-container button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: #1db954;
            color: #fff;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .search-container button:hover {
            background-color: #1aa34a;
        }
        .results {
            display: flex;
            justify-content: space-evenly;
            flex-wrap: wrap;
            margin-top: 40px;
            text-align: center;
        }
        .track {
            margin-bottom: 20px;
            width: 300px;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: inline-block;
            text-align: center;
            text-decoration: none;
            color: black;
        }
        .track img {
            max-width: 200px;
            height: auto;
            border-radius: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="search-container">
        <h1>Rechercher une musique</h1>
        {{ form_start(form) }}
            {{ form_widget(form.searchValue) }}
            {{ form_widget(form.search) }}
        {{ form_end(form) }}
    </div>
    <div class="results">
        {% if tracks is defined %}
            {% if tracks|length > 0 %}
                {% for track in tracks %}
                    <a href="music/{{ track.id }}" class="track">
                        <h2>{{ track.name }}</h2>
                                                    <div class="favorite-buttons">
                                <form action="{{ path('favorite_add') }}" method="post" style="display: inline;">
                                    <input type="hidden" name="track_id" value="{{ track.id }}">
                                    <button type="submit" style="background: none; border: none; cursor: pointer;">
                                        <i class="fas fa-heart"></i>
                                    </button>
                                </form>
                            </div>
                        {% if track.pictureLink %}
                            <img src="{{ track.pictureLink }}" alt="{{ track.name }}">
                        {% endif %}
                        <p>Duration: {{ (track.durationMs / 1000)|round }} seconds</p>
                        <p>Popularity: {{ track.popularity }}</p>
                        {% if track.previewUrl %}
                            <audio controls>
                                <source src="{{ track.previewUrl }}" type="audio/mpeg">
                                Your browser does not support the audio element.
                            </audio>
                        {% endif %}
                    </a>
                {% endfor %}
            {% else %}
                <p>No tracks found.</p>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}